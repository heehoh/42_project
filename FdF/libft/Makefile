NAME = libft.a
SRCS = ft_memcpy.c \
	   ft_isascii.c \
	   ft_strlcat.c \
	   ft_strrchr.c \
	   ft_atoi.c \
	   ft_isdigit.c \
	   ft_memmove.c \
	   ft_split.c \
	   ft_strlcpy.c \
	   ft_strtrim.c \
	   ft_bzero.c \
	   ft_isprint.c \
	   ft_memset.c \
	   ft_strchr.c \
	   ft_strlen.c \
	   ft_substr.c \
	   ft_calloc.c \
	   ft_strdup.c \
	   ft_tolower.c \
	   ft_isalnum.c \
	   ft_memchr.c \
	   ft_strncmp.c \
	   ft_toupper.c \
	   ft_isalpha.c \
	   ft_memcmp.c \
	   ft_strjoin.c \
	   ft_strnstr.c \
	   ft_printf.c \
	   print_type.c \
	   ft_itoa.c \
	   ft_lstnew_bonus.c \
	   ft_lstadd_front_bonus.c \
	   ft_lstsize_bonus.c \
	   ft_lstlast_bonus.c \
	   ft_lstadd_back_bonus.c \
	   ft_lstdelone_bonus.c \
	   ft_lstclear_bonus.c \
	   ft_lstiter_bonus.c \
	   ft_lstmap_bonus.c \
	   get_next_line.c \
	   get_next_line_utils.c

OBJS = $(SRCS:.c=.o)

CC = cc
CFLAGS = -Wall -Wextra -Werror

all : $(NAME)

$(NAME) : $(OBJS)
	$(AR) crs $(NAME) $(OBJS)

%.o : %.c
	$(CC) -c $(CFLAGS) $< -o $@

clean :
	rm -f $(OBJS)

.PHONY : clean

fclean : clean
	rm -f $(NAME)

.PHONY : fclean

re :
	make fclean
	make all

.PHONY : re
